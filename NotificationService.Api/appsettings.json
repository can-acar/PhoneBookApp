{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "NotificationService": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/notification-service-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {SourceContext} {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithEnvironmentName",
      "WithCorrelationId"
    ],
    "Properties": {
      "ServiceName": "NotificationService",
      "Environment": "Development"
    }
  },
  "AllowedHosts": "*",
  "MongoDb": {
  "ConnectionString": "mongodb://mongodb:27017",
    "DatabaseName": "TelefonRehberi",
    "NotificationsCollectionName": "Notifications",
    "TemplatesCollectionName": "NotificationTemplates"
  },
  "Kafka": {
  "BootstrapServers": "kafka:29092",
    "GroupId": "notification-service-consumer",
    "ReportCompletedTopic": "report-completed",
    "NotificationsTopic": "notifications",
    "ErrorTopic": "notification-errors",
    "Topics": {
      "ReportEvents": "report-events",
      "NotificationEvents": "notification-events"
    }
  },
  "EmailProvider": {
    "SmtpServer": "smtp.example.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "notifications@example.com",
    "Password": "your-password-here",
    "DefaultFromAddress": "notifications@example.com",
    "DefaultFromName": "TelefonRehberi Notifications",
    "IsEnabled": true
  },
  "SmsProvider": {
    "ApiKey": "your-api-key-here",
    "ApiSecret": "your-api-secret-here",
    "ApiUrl": "https://api.sms-provider.com/send",
    "DefaultSender": "TelefonRehberi",
    "IsEnabled": true
  }
}
